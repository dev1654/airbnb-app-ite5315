<div class="row">
    <div class="col-12">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 fw-bold">Airbnb Listings</h1>
                <p class="text-muted">{{total}} listings found</p>
            </div>
            <a href="/create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Listing
            </a>
        </div>

        <!-- Advanced Search Filters -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3"><i class="fas fa-search me-2"></i>Search & Filter</h5>
                <form method="GET" action="/" class="row g-3">
                    <!-- Price Range -->
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Price Range</label>
                        <div class="row g-2">
                            <div class="col">
                                <input type="number" class="form-control" name="minPrice" placeholder="Min" value="{{filters.minPrice}}">
                            </div>
                            <div class="col">
                                <input type="number" class="form-control" name="maxPrice" placeholder="Max" value="{{filters.maxPrice}}">
                            </div>
                        </div>
                    </div>

                    <!-- Room Type -->
                    <div class="col-md-2">
                        <label class="form-label small fw-bold">Room Type</label>
                        <select class="form-select" name="room_type">
                            <option value="">All Types</option>
                            {{#each roomTypes}}
                            <option value="{{this}}" {{#eq this ../filters.room_type}}selected{{/eq}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Neighbourhood Group -->
                    <div class="col-md-2">
                        <label class="form-label small fw-bold">Area</label>
                        <select class="form-select" name="neighbourhood_group">
                            <option value="">All Areas</option>
                            {{#each neighbourhoodGroups}}
                            <option value="{{this}}" {{#eq this ../filters.neighbourhood_group}}selected{{/eq}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Neighbourhood -->
                    <div class="col-md-2">
                        <label class="form-label small fw-bold">Neighbourhood</label>
                        <select class="form-select" name="neighbourhood">
                            <option value="">All</option>
                            {{#each neighbourhoods}}
                            <option value="{{this}}" {{#eq this ../filters.neighbourhood}}selected{{/eq}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Sort By -->
                    <div class="col-md-2">
                        <label class="form-label small fw-bold">Sort By</label>
                        <select class="form-select" name="sortBy">
                            <option value="price" {{#eq filters.sortBy "price"}}selected{{/eq}}>Price: Low to High</option>
                            <option value="price_high" {{#eq filters.sortBy "price_high"}}selected{{/eq}}>Price: High to Low</option>
                            <option value="review_rate_number" {{#eq filters.sortBy "review_rate_number"}}selected{{/eq}}>Highest Rated</option>
                            <option value="number_of_reviews" {{#eq filters.sortBy "number_of_reviews"}}selected{{/eq}}>Most Reviews</option>
                        </select>
                    </div>

                    <!-- Search by Name -->
                    <div class="col-12">
                        <label class="form-label small fw-bold">Search by Name, Host, or Location</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" placeholder="Search listings, hosts, or locations..." value="{{filters.search}}">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Search
                            </button>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Listings Grid -->
        {{#if airbnbs.length}}
        <div class="row">
            {{#each airbnbs}}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    {{#if this.thumbnail}}
                    <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.NAME}}" style="height: 200px; object-fit: cover;">
                    {{else if this.images.length}}
                    <img src="{{this.images.[0]}}" class="card-img-top" alt="{{this.NAME}}" style="height: 200px; object-fit: cover;">
                    {{else}}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fas fa-home fa-3x text-muted"></i>
                    </div>
                    {{/if}}
                    
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{this.NAME}}</h5>
                        <p class="price-tag mb-2">${{this.price}}/night</p>
                        
                        <p class="text-muted small mb-2">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            {{#if this.neighbourhood}}{{this.neighbourhood}}{{/if}}
                            {{#if this.neighbourhood_group}} • {{this.neighbourhood_group}}{{/if}}
                        </p>
                        
                        <p class="text-muted small mb-2">
                            <i class="fas fa-door-open me-1"></i>{{this.room_type}}
                        </p>
                        
                        <p class="text-muted small mb-3">
                            <i class="fas fa-star me-1 text-warning"></i>{{this.review_rate_number}} 
                            ({{this.number_of_reviews}} reviews)
                            {{#if this.host_name}} • <i class="fas fa-user me-1"></i>{{this.host_name}}{{/if}}
                        </p>

                        {{#if this.house_rules}}
                        <p class="card-text small text-muted">{{truncate this.house_rules 100}}</p>
                        {{/if}}
                    </div>
                    
                    <div class="card-footer bg-white border-0">
                        <a href="/{{this._id}}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="fas fa-home fa-4x text-muted mb-3"></i>
            <h3>No listings found</h3>
            <p class="text-muted mb-4">Try adjusting your search filters</p>
            <a href="/" class="btn btn-primary me-2">Clear Filters</a>
            <a href="/create" class="btn btn-outline-primary">Add New Listing</a>
        </div>
        {{/if}}

        <!-- Pagination -->
        {{#if totalPages}}
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&{{queryString}}">
                        <i class="fas fa-chevron-left me-2"></i>Previous
                    </a>
                </li>
                {{/if}}
                
                {{#each (range (max 1 (subtract currentPage 2)) (min totalPages (add currentPage 2)))}}
                <li class="page-item {{#eq this ../currentPage}}active{{/eq}}">
                    <a class="page-link" href="?page={{this}}&{{queryString}}">{{this}}</a>
                </li>
                {{/each}}
                
                {{#if hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&{{queryString}}">
                        Next<i class="fas fa-chevron-right ms-2"></i>
                    </a>
                </li>
                {{/if}}
            </ul>
        </nav>
        {{/if}}
    </div>
</div>